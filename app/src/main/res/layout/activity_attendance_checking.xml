<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gszzz.attendclass.AttendanceChecking">


    <TextView
        android:id="@+id/moduleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Greeting"
        android:layout_centerHorizontal="true"
        android:text="This is EE1001"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/totalNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moduleInfo"
        android:layout_centerHorizontal="true"
        android:text="43/50"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/furtherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalNumTextView"
        android:layout_centerHorizontal="true"
        android:onClick="enterNameList"
        android:text="see more"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stopScanningTempButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balancedButton"
        android:layout_centerHorizontal="true"
        android:onClick="stopScanningOnClicked"
        android:text="See Rx Power" />

    <TextView
        android:id="@+id/Greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="Hello Professor"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Bitmap" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/furtherInfo"
        android:layout_centerHorizontal="true"
        android:text="Time" />

    <Button
        android:id="@+id/lowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/balancedButton"
        android:layout_alignBottom="@+id/balancedButton"
        android:onClick="lowFreqOnClicked"
        android:text="Low Frequency" />

    <Button
        android:id="@+id/balancedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:onClick="balancedOnClicked"
        android:text="Balanced" />

    <Button
        android:id="@+id/highButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/balancedButton"
        android:layout_alignBottom="@+id/balancedButton"
        android:layout_alignParentEnd="true"
        android:onClick="highFreqOnClicked"
        android:text="High Frequency" />

</RelativeLayout>
