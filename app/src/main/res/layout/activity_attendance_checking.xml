<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gszzz.attendclass.AttendanceChecking">


    <TextView
        android:id="@+id/moduleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="This is EE1001"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/totalNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/furtherInfo"
        android:layout_centerHorizontal="true"
        android:text="43/50"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/furtherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see more"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:onClick="enterNameList"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/stopScanningTempButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:onClick="stopScanningOnClicked"
        android:text="Stop Scanning" />

    <Switch
        android:id="@+id/startBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stopScanningTempButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:checked="false"
        android:splitTrack="false"
        android:text="Broadcast"
        android:onClick="broadcastOnClicked"
        tools:checked="false"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/Greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Hello Professor"
        android:textSize="25dp" />

</RelativeLayout>
