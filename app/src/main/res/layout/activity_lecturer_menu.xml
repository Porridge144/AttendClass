<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gszzz.attendclass.LecturerMenu">

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:textSize="20dp"
        android:text="Check Attendance"
        android:onClick="enterAttendanceChecking" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkButton"
        android:layout_alignLeft="@+id/checkButton"
        android:layout_alignRight="@+id/checkButton"
        android:layout_alignStart="@+id/checkButton"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text="Timetable Management"
        android:onClick="enterTimetableManagement"/>

</RelativeLayout>
