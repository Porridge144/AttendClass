<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gszzz.attendclass.AttendanceTaking">

    <Switch
        android:id="@+id/startAdvertiseSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:allowUndo="false"
        android:onClick="startAdvertiseOnClicked"
        android:text="Start Advertise"
        android:layout_below="@+id/relayButton"
        android:layout_alignEnd="@+id/moduleLocation"
        android:layout_marginTop="57dp" />

    <TextView
        android:id="@+id/defaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:textSize="23sp"
        android:text="Currently in module" />

    <TextView
        android:id="@+id/moduleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="EE1001"
        android:textSize="30sp"
        android:layout_below="@+id/defaultText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/moduleLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moduleInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="27sp"
        android:text="At E5-04-21" />

    <Button
        android:id="@+id/relayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/defaultText"
        android:layout_alignStart="@+id/defaultText"
        android:layout_below="@+id/moduleLocation"
        android:layout_marginTop="55dp"
        android:onClick="relayOnClicked"
        android:text="Scan for Relay"
        android:textSize="23sp" />
</RelativeLayout>
