<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gszzz.attendclass.attendanceTaking">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:onClick="registerClassOnClicked"
        android:text="Register For the Class"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/defaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:textSize="23dp"
        android:text="Currently in module" />

    <TextView
        android:id="@+id/moduleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="EE1001"
        android:textSize="30dp"
        android:layout_below="@+id/defaultText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/moduleLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moduleInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="27dp"
        android:text="At E5-04-21" />

    <Button
        android:id="@+id/attendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/defaultText"
        android:layout_alignLeft="@+id/defaultText"
        android:layout_alignRight="@+id/defaultText"
        android:layout_alignStart="@+id/defaultText"
        android:layout_below="@+id/moduleLocation"
        android:layout_marginTop="55dp"
        android:onClick="attendOnClicked"
        android:text="Attend"
        android:textSize="23dp" />
</RelativeLayout>
